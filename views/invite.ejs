<!doctype html>
<html>
<head>
<title>Systemapic Invitation</title>
	<script src='../js/src/core/class.js'></script>
	<script src='../js/src/core/invite.js'></script>
	<link href='../css/invite.css' rel='stylesheet' />

	<script type="text/javascript">(function(){
		window.hotlink = '<%- JSON.stringify(hotlink) %>';
		window.tokens = JSON.parse('<%- JSON.stringify(access_token) %>');
		window.invite_store = JSON.parse('<%- invite %>');
		}());
	</script>

</head>
<body>

	<div id="header"></div>
	<div id="invite">
		
		<!-- LOGIN FORM -->
		<form action="/register" method="post" id="registration-form">
			<div class="form-group">
				<label>Email</label>
				<input type="text" required class="form-control" name="email">
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" required class="form-control" name="password">
			</div>
			<div class="form-group">
				<label>First Name</label>
				<input type="text" required class="form-control" name="firstname">
			</div>
			<div class="form-group">
				<label>Last Name</label>
				<input type="text" required class="form-control" name="lastname">
			</div>
			<div class="form-group">
				<label>Company</label>
				<input type="text" class="form-control" name="company">
			</div>
			<div class="form-group">
				<label>Position</label>
				<input type="text" class="form-control" name="position">
			</div>
			<div class="form-group" style="display:none;">
				<input type="text" class="form-control" name="invite_token" style="display: none;" id="invite_token">
			</div>
			

			<button type="submit" class="btn btn-warning btn-lg">Signup</button>
		</form>

	</div>

	<div id="footer"></div>
	<script> 
		var app = new Wu.Invite({
			id : 'invite',
			header : 'header',
			footer: 'footer'
		});
	</script>
</body>
</html>