<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>Systemapic Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link rel="stylesheet" href="//85.10.202.87:8080/css/style.css">
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Secure Login</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/login" method="post" id="hitme">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="btn btn-default" style="zoom:2" name="login">Login</button>
		<button type="submit" class="btn btn-default" onclick="javascript: form.action='/forgot';">Forgot password?</button>


	</form>


	<!-- <hr> -->

	<!-- <p>Need an account? <a href="/signup">Sign up</a></p>
	<p>Or go <a href="/">home</a></p> -->

</div>

</div>

<script>
window.onload = function () {
	console.log('loaded!')
	document.onkeydown = function (e) {
	console.log('keydown:');
	console.log('e.keyCode: ', e.keyCode);
	if (e.keyCode == 13) {
		console.log("!!!");
        	var tb = document.getElementById("hitme");
        	console.log('tb: ', tb);
        	tb.submit();
        }
}

}

</script>



</body>
</html>