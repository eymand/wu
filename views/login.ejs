<!doctype html>
<html>
<head>
<title>Systemapic Authentication</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
<link href='dist/css.login.min.css' rel='stylesheet' />
<!-- <script src="dist/combined/login.min.js"></script> -->

<script src='js/lib/mapbox.js/mapbox.2.1.4.js'></script>
<script src='js/lib/mapbox-gl.js/mapbox-gl.js'></script>
<script src='js/src/controls/spinningMap.js'></script>
<script src='js/src/core/login.js'></script>

<style>
</style>
</head>
<body>

	<div id="styletag"></div>



	<div id="spinning-map"></div>
	<div id="spinning-content">
		<div class="col-sm-6 col-sm-offset-3">
			<div id="powered-by">Powered by<a href="http://systemapic.com">Systemapic.com Â©</a></div>
			<div id="login-logo"></div>

			<div id="login-wrapper">
				<div id="login-inner-wrapper">
					<h1 style="font-size: 25px;"><span class="secure-login-symbol"></span> Secure Login</h1>

					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<form action="/login" method="post" id="hitme">
						<div class="form-group"><input type="text" class="form-control" name="email" placeholder="Enter email..."></div>
						<div class="form-group"><input type="password" class="form-control" name="password" placeholder="Enter password..."></div>
						<button type="submit" id="login-button" class="btn btn-default" name="login">Login</button>
						<button type="submit" id="forgot-password" onclick="javascript: form.action='/forgot';">Forgot password?</button>
					</form>
				</div>
			</div>
		</div>
	</div>

	<script> spin(); 

		if (L.Browser.mobile) {
			var styletag = document.getElementById('styletag');
			var styleURL = '<link rel="stylesheet" href="https://projects.ruppellsgriffon.com/css/mobilestyle-login.css">';
			styletag.innerHTML = styleURL;
		}




	</script>

